<html>
<head>
  <title>Mean Garden</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="http://maps.google.com/maps/api/js"></script>
  <script src="http://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.min.js"></script>
  
  <!-- MY CODE -->
  <script src="javascripts/app.js"></script>
  <script src="javascripts/controllers.js"></script>

</head>
<body ng-app="meanGarden">

  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#">Home</a></li>
    <li role="presentation"><a href="#">Add a garden</a></li>
  </ul>


<div ng-controller="newGardenCtrl">
    <form ng-submit="addGarden()">
      <input type="text" name="title" ng-model="newWord" placeholder="Name of your garden"> <br>
      <button> Add Word</button>
     </form>

<div>
  <form class="thing-form">
    <label>Add your Garden</label>
    <p class="input-group">
      <input type="text" class="form-control" placeholder="Add a new thing here." ng-model="newThing">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary" ng-click="addThing()">Add New</button>
      </span>
    </p>
  </form>
</div>
<div>

  <form ng-submit="createGarden()">>
  <p class="input-group">
      <div>
      <label>Garden Title</label>
      <input type="text" class="form-control" ng-model="name" placeholder="Garden Tag Line">
      <span class="help-block"></span>

      <label>Address</label>
      <input type="text" class="form-control" ng-model="description" placeholder="testing">
      <span class="help-block"></span>

      <label>Latitude</label>
      <input type="text" class="form-control" ng-model="address" placeholder="testing">
      <span class="help-block"></span>

      <label>Longitude</label>
      <input type="text" class="form-control" ng-model="neighborhood" placeholder="testing">
      <span class="help-block"></span>
      
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary" ng-click="addThing()">Add New</button>
      </span>
    </div>  
</form>
</p>
</div>
     </body>
</html>